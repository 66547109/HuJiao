<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/slid_width"
    android:layout_height="fill_parent"
    android:background="@mipmap/bitmap_book_read_chapterlist_repeat"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="@dimen/slid_width"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_top" />


    <RelativeLayout
        android:id="@+id/rel_head"
        android:layout_width="@dimen/slid_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:onClick="myClick">

        <ImageView
            android:id="@+id/image_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="28.0dip"
            android:layout_below="@+id/image_head"
            android:layout_centerHorizontal="true"
            android:text="hukunge"
            android:textColor="#ff959595"
            android:textSize="14.0sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="@dimen/slid_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_head"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="@dimen/slid_width"
            android:layout_height="50.0dip"
            android:background="@drawable/selector_category_item"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_category_mark"
            android:drawablePadding="1.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="25.0dip"
            android:paddingRight="10.0dip"
            android:text="相册"
            android:textColor="#ff959595"
            android:textSize="16.0sp"
            android:onClick="myClick"/>

        <View
            android:layout_width="@dimen/slid_width"
            android:layout_height="2.0dip"
            android:background="@mipmap/ic_shelf_category_divider" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="@dimen/slid_width"
            android:layout_height="50.0dip"
            android:background="@drawable/selector_category_item"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_category_mark"
            android:drawablePadding="1.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="25.0dip"
            android:paddingRight="10.0dip"
            android:text="设置"
            android:textColor="#ff959595"
            android:textSize="16.0sp"
            android:onClick="myClick"/>

        <View
            android:layout_width="@dimen/slid_width"
            android:layout_height="2.0dip"
            android:background="@mipmap/ic_shelf_category_divider" />

    </LinearLayout>

</RelativeLayout>